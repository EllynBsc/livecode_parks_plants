<p id="notice"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1> <%= @garden.name %></h1>
    <%= link_to 'Edit', edit_garden_path(@garden), class: 'btn btn-primary' %> |
    <%= link_to 'Back', gardens_path, class: 'btn btn-warning' %>
    <%= link_to 'create a plant',  new_garden_plant_path(@garden), class: 'btn btn-danger' %>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @garden.plants.each do |plant| %>
    <div class="col-sm-4">
     <%= image_tag plant.image_url, width: 200%>
     <h3><%= plant.name %></h3>
     <p><%= plant.price %></p>
     <%= link_to 'destroy', plant_path(plant), method: :delete, data: {confirm: 'are you'}, class: 'btn btn-danger' %>

    </div>
    <% end %>
  </div>
</div>

